<main id="search">
    <section class="game-search">
        <h1>Search</h1>

        <form class="search-form" method="GET" action="/creatures/search">
            <input type="text" class="search-game" name="searchName" placeholder="Search here...">
            <select id="platform" name="searchPlatform">
                <option value="">-------</option>
                <option value="PC">PC</option>
                <option value="Nintendo">Nintendo</option>
                <option value="PS4">PS4</option>
                <option value="PS5">PS5</option>
                <option value="XBOX">XBOX</option>
            </select>
            <button type="submit" class="btn-search">Search</button>
        </form>

        {{#if creatures}}
        {{#each creatures}}
        <div class="search-result">
            <div class="search-list">
                <div class="game">
                    <div class="game-img">
                        <img src="{{image}}">
                    </div>
                    <div class="game-info">
                        <h1>{{name}}</h1>
                        <p><span>Platform: </span>{{platform}}</p>
                        <p><span>Ganre: </span>{{genre}}</p>
                        <p><span>Price: </span>${{price}}</p>
                    </div>

                    <a href="/creatures/{{_id}}/details" class="btn-details">Details</a>
                </div>
            </div>
        </div>
        {{/each}}
        {{else}}

        <div class="no-match">
            <p>No match was found!</p>
        </div>
        {{/if}}
    </section>
</main>