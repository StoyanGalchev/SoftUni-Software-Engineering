<main>

    <section id="details-page">
        <article class="details-gage-title">
            <h1>Details Page</h1>
        </article>
        <article class="details-page-card">

            <article class="details-page-card-image">
                <!-- Do not forget to change the path to the image -->
                <img src="/static/img/man.png" alt="details-image">
            </article>

            <article class="details-page-card-content">
                <p>Author: {{creatures.owner.email}}</p>
                <h2>Headline: {{creatures.headline}}</h2>
                <h3>Company name: {{creatures.companyName}}</h3>
                <h4>Company description: {{creatures.companyDescription}}</h5>

                    <article class="details-page-card-buttons">
                        {{#if isAuthenticated}}
                        {{#if isOwner}}

                        <!--only for registered users and author of the ad-->
                        <a href="/creatures/{{creatures._id}}/edit" class="btn-edit">Edit</a>
                        <a href="/creatures/{{creatures._id}}/delete" class="btn-delete">Delete</a>
                        {{/if}}


                        {{#if isBouth}}
                        <p class="already-applied">You have already applied!</p>

                        {{else}}
                        <a href="/creatures/{{creatures._id}}/buy" class="btn-apply">Apply now!</a>
                        <p class="applied-people">Hurry up, {{creatures.donations.length}} people have already applied.</p>

                        {{/if}}




                        {{/if}}
                    </article>
            </article>

        </article>
    </section>

