<main id="details">
    <section id="details-info">
        <div class="game-image">
            <img src="{{creatures.image}}">
        </div>

        <div class="game-info">
            <div class="game-text">
                <h1 id="name">{{creatures.name}}</h1>
                <h3 id="platform">Platform: {{creatures.platform}}</h3>
                <p id="price"><span>Price: ${{creatures.price}}</span></p>
                <p id="genre"><span>Genre: {{creatures.genre}}</span></p>
                <p id="description">{{creatures.description}}</p>
            </div>
            {{#if isAuthenticated}}
            <div class="product-btn">
                <!--Only for registered user and author of the publication -->

                {{#if isOwner}}
                <div class="author">
                    <a href="/creatures/{{creatures._id}}/edit" class="btn-edit">Edit</a>
                    <a href="/creatures/{{creatures._id}}/delete" class="btn-delete">Delete</a>
                </div>
                {{else}}
                {{#if isBouth}}
                <!-- Logged in user who has already buy this game code-->
                <p class="buy-message">You have already bought this game</p>
                {{else}}
                <!-- Logged in user who has not yet buy this game code-->
                <a href="/creatures/{{creatures._id}}/buy" class="btn-buy">Buy</a>
                {{/if}}
                {{/if}}
            </div>
            {{/if}}
        </div>
    </section>
</main>