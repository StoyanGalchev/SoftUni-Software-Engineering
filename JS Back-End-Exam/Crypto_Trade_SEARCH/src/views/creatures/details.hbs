<main>
    <section id="details-info">
        <h1>Details</h1>
        <div class="coin-image">
            <img src="{{creatures.image}}">
        </div>

        <div class="coin-info">
            <div class="coin-text">
                <h1 id="name">{{creature.name}}</h1>
                <h3 id="payment">Payment method: {{creatures.payment}}</h3>
                <p id="price"><span>Price: ${{creatures.price}}</span></p>
                <p id="description">{{creatures.description}}</p>
            </div>
            {{#if isAuthenticated}}
            <div class="product-btn">
                <!--Only for registered user and author of the publication -->
                {{#if isOwner}}
                <div class="author">
                    <a href="/creatures/{{creatures._id}}/edit" class="btn-edit">Edit</a>
                    <a href="/creatures/{{creatures._id}}/delete" class="btn-delete">Delete</a>
                </div>
                {{else}}

                {{#if isBouth}}

                <!-- Logged in user who has already buy this crypto-->
                <p class="buy-message">You already bought these crypto coins.</p>
                {{else}}
                <!-- Logged in user who has not yet buy this crypto-->
                <a href="/creatures/{{creatures._id}}/buy" class="btn-buy">Buy</a>
                {{/if}}
                {{/if}}
            </div>
            {{/if}}
        </div>
    </section>
</main>