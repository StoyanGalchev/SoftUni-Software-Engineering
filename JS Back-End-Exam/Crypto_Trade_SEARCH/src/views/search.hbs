
<main>
    <section class="crypto-search">
        <h1>Search</h1>

        <form class="search-form" method="GET" action="/creatures/search">
            <input type="text" class="search-coin" name="searchName" placeholder="Search here...">
            <select id="payment" name="payment">
              //  <option value="all" hidden="true">All</option>
                <option value="crypto-wallet">Crypto Wallet</option>
                <option value="credit-card">Credit Card</option>
                <option value="debit-card">Debit Card</option>
                <option value="paypal">PayPal</option>
            </select>
            <button type="submit" class="btn-search">Search</button>
        </form>

        <div class="search-result">
            <div class="search-list">
                {{#each creatures}}
                <div class="coin">
                    <div class="coin-img">
                        <img src="{{image}}">
                    </div>
                    <div class="coin-info">
                        <h1>{{name}}</h1>
                        <p><span>Price: </span>${{price}}</p>
                        <p><span>Payment: </span>{{payment}}</p>
                    </div>

                    <a href="/creatures/{{_id}}/details}" class="btn-details">Details</a>
                </div>
                {{else}}
                <div class="no-match">
                    <p>No match was found!</p>
                </div>
                {{/each}}
            </div>

        </div>


    </section>
</main>