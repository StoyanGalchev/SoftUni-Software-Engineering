<main>
    <section class="py-5" id="edit-trip-page">
        <div class="container edit">
            <h1>Edit trip</h1>
            <div>
                <form  method="POST">
                    <div class="edit-label">
                        <label for="startPoint"> <i class="fas fa-map-marker-alt"></i> Starting Point</label>
                        <label for="endPoint"> <i class="fas fa-map-marker-alt"></i> End Point</label>
                    </div>
                    <div class="form-group edit-input">
                        <input type="text" class="form-control-2" id="startPoint" name="start"
                            value="{{creatures.start}}">
                        <input type="text" class="form-control-2" id="endPoint" name="end" value="{{creatures.end}}">
                    </div>
                    <div class="edit-label">
                        <label for="date"> <i class="far fa-calendar-alt"></i> Date</label>
                        <label for="time"> <i class="far fa-clock"></i> Time</label>
                    </div>
                    <div class="form-group edit-input">
                        <input type="date" class="form-control-2" id="date" name="date" value="{{creatures.date}}">
                        <input type="time" class="form-control-2" id="time" name="time" value="{{creatures.time}}">
                    </div>
                    <div class="edit-label">
                        <label for="carImage">Car Image</label>
                        <label for="carBrand">Car Brand</label>
                    </div>
                    <div class="form-group edit-input">
                        <input type="text" class="form-control-2" id="carImage" name="image"
                            value="{{creatures.image}}">
                        <input type="text" class="form-control-2" id="carBrand" name="brand"
                            value="{{creatures.brand}}">
                    </div>
                    <div class="edit-label">
                        <label for="seats">Available Seats</label>
                        <label for="price">Price</label>
                    </div>
                    <div class="form-group edit-input">
                        <input type="text" class="form-control-2" id="seats" name="seats" value="{{creatures.seats}}">
                        <input type="text" class="form-control-2" id="price" name="price" value="{{creatures.price}}">
                    </div>
                    <div class="form-group">
                        <label for="description">Description</label>
                        <textarea class="form-control" id="description"
                            name="description">{{creatures.description}}</textarea>
                    </div>
                    <button type="submit" class="btn btn-primary">Submit</button>
                </form>
            </div>
        </div>
    </section>
</main>