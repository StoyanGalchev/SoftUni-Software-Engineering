<main>
    {{#if error}}
    <div class="error-box">
        <p>error</p>
    </div>
    {{/if}}
    <!-- Details Page -->
    <section id="catalog-section">

        <h1 class="item">
            Fishing Boat
        </h1>
        <div class="item padded">

            <div class="layout right large">

                <div class="col">
                    <img src="{{creatures.image}}" class="img-large">
                </div>

                <div class="content pad-med">

                    <p>In category: <strong>{{creatures.category}}</strong></p>
                    <p>{{creatures.description}}</p>

                    <div class="align-center">
                        <div>
                            Current price: $<strong>{{creatures.price}}</strong>
                        </div>

                        <!-- If current user can place a bid -->
                        <form class="vertical" method="post" action="#">
                            <label><span>Bid amount</span><input type="number" name=""></label>
                            <input class="action" type="submit" value="Place bid">
                        </form>

                        <!-- If current user is the bidder -->
                        <div>
                            You are currently the <strong>highest bidder</strong> for this auction
                        </div>

                    </div>

                </div>
            </div>

            <footer>Listed by {{creatures.owner.firstName}} {{creatures.owner.lastName}}</footer>
        </div>

    </section>

</main>







