<section id="detailsPage">
    <div id="detailsInfo">
        <h1>{{creatures.name}}</h1>
        <div class="info"><img src="{{creatures.image}}"></div>

        <div class="info">
            <h3>Type: {{creatures.type}}</h3>
            <h3>Year of Production: {{creatures.production}}</h3>
            <h3>Years of Exploitation: {{creatures.exploitation}}</h3>
            <h3>Damages: {{creatures.damages}}.</h3>
            <h3>Description: {{creatures.description}}</h3>
            <h2>Price: ${{creatures.price}}</h2>
        </div>

        <!--If there is user logged in-->
        {{#if isAuthenticated}}
        <div class="buttons">
            {{#if isOwner}}
            <!--If user is owner-->
            <a href="/creatures/{{creatures._id}}/edit" class="edit-btn">Edit</a>
            <a href="/creatures/{{creatures._id}}/delete" class="delete-btn">Delete</a>
            {{else}}
            <!--If user is not owner of the toy post-->

            {{#if isBouth}}
            
             <p><span class="buy">Thank You For Your Purchase</span></p>
            {{else}}
           
        <a href="/creatures/{{creatures._id}}/buy" class="buy-btn">Buy</a>
            {{/if}}

            {{/if}}
        </div>

        {{/if}}

    </div>
</section>