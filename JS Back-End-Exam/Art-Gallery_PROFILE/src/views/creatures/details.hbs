<main>

    <section id="details-page">

        <div class="main_card">
            <div class="card_left">
                <div class="card_datails">

                    <h1>Name: {{creatures.name}}</h1>
                    <h3>Created by an author: {{creatures.owner.firstname}} {{creatures.owner.lastname}}</h3>
                    <div class="card_character">
                        <p class="card-species">Species: {{creatures.species}}</p>
                        <p class="card-skin">Skin colour: {{creatures.skinColor}}</p>
                        <p class="card-eye">Eye Colour: {{creatures.eyeColor}}</p>
                    </div>

                    <p class="disc">Description : {{creatures.description}}.</p>

                    {{#if isAuthenticated}}
                    <!-- If there is no registered user, do not display buttons-->
                    <div class="social-btn">
                        {{#if isOwner}}
                        <!-- Only for registered user and author of the post -->
                        <a href="/creatures/{{creatures._id}}/edit" class="edit-btn">Edit</a>
                        <a href="/creatures/{{creatures._id}}/delete" class="del-btn">Delete</a>
                        {{else}}
                        {{#if isVoted}}
                        <!-- logged in users, who have not yet voted-->
                        <p class="thanks-for-vote">Thanks For Voting</p>
                        {{else}}
                        <!-- logged in user who has already voted-->
                        <a href="/creatures/{{creatures._id}}/vote" class="vote-up">Vote</a>
                        {{/if}}

                        {{/if}}
                        {{/if}}
                    </div>
                </div>
            </div>
            <div class="card_right">
                <img src="{{creatures.image}}" alt="image">
            </div>
        </div>

    </section>

    <section id="votes">
        <div class="vote-info">
            <div class="card_left">
                <div class="card_datails">
                    <h1>Votes</h1>
                    <div class="card_vote">
                        <!-- Show the rating of votes, if there are no votes yet, the number must be 0. -->

                        <p class="PV">Total rating of votes: {{voteLength}}</p>
                    </div>

                    {{#if aray}}
                    <!-- If there are already people who have cast their vote for the post, separate their emails with a comma and a space ", " -->
                    <p class="disc">People who voted for the post -{{aray}} </p>
                    {{else}}
                    <!-- If not display: -->
                    <p class="disc">People who voted for the post - No one has voted yet.</p>
                    {{/if}}

                </div>
            </div>
        </div>
    </section>

</main>



