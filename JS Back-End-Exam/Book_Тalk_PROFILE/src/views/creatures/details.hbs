<section class="details-page">
    <h1>Details</h1>
    <article class="details-card">

        <article class="details-card-text">
            <h2>Title:<br> {{creatures.title}}</h2>
            <h3>Author: {{creatures.author}}</h3>
            <h3>Stars: {{creatures.stars}}</h3>
            <h3>Genre: {{creatures.genre}}</h3>
            <h3>Review: {{creatures.review}}
            </h3>

            {{#if isAuthenticated}}
            <!-- If there is no registered user, do not display buttons-->
            <div class="buttons">
                {{#if isOwner}}
                <!-- Only for registered user and author of the review -->
                <a href="/creatures/{{creatures._id}}/edit" class="btn-edit">Edit</a>
                <a href="/creatures/{{creatures._id}}/delete" class="btn-delete">Delete</a>
                {{else}}
                {{#if isVoted}}
                <!-- logged in user who has already wished book-->
                <p class="wish-pub">You already added the book to your wish list</p>
                {{else}}

                <!-- logged in user who has not yet wished book-->
                <a href="/creatures/{{creatures._id}}/vote" class="btn-wish">Wish to read</a>
                {{/if}}
                {{/if}}

                {{/if}}

            </div>

        </article>

        <article class="details-card-image">
            <img src="{{creatures.image}}">
        </article>

    </article>
</section>