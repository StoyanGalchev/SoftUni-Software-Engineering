

<main>
    <div class="details-container">
        <div class="details-container-image">
            <img src="{{creatures.image}}">
        </div>
        <div class="details-container-info">
            <h2>Title: {{creatures.title}}</h2>
            <h3>Type: {{creatures.type}}</h3>
            <h3>Certificate: {{creatures.certificate}}</h3>
            <h3>Price: â‚¬{{creatures.price}}</h3>
            <h3>By: {{creatures.owner.username}}</h3>
            <!--If there are sign up users-->
            {{#if signedArrayOfUsersNames}}
            <h4>Signed By:
                {{ signedArrayOfUsersNames }}


            </h4>
            <!--If there are no sign up users-->
            {{else}}
            <h4>Nobody has signed in for this course yet</h4>
            {{/if}}
        </div>
        <div class="details-container-content">
            <p>{{creatures.description}}</p>
        </div>
        {{#if isAuthenticated}}
        <div class="btn-container">
            <!-- Only for registered user and creator of the course-->
            {{#if isOwner}}
            <a href="/creatures/{{creatures._id}}/edit">Edit</a>
            <a href="/creatures/{{creatures._id}}/delete">Delete</a>

            {{else}}
            <!-- logged in user who has not yet sign up for the course-->
            {{#if isSigned}}
            <!-- logged in user who has already sign up for the course-->
            <p class="sign-up">You've already signed up for this course!</p>
            {{else}}
            <a href="/creatures/{{creatures._id}}/signup">Sign up</a>
            {{/if}}

            {{/if}}
        </div>
        {{/if}}
    </div>
</main>


